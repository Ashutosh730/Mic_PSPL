<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2.8"
        android:padding="58dp"
        android:background="@color/yellow"
        android:src="@drawable/mic_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white_yellow">

        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="~ Back"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Forgot Password ?"
            android:textColor="@color/yellow"
            android:textSize="28sp"
            android:textStyle="bold"
            android:padding="24sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registered Email"
            android:textColor="@color/black"
            android:paddingLeft="52dp"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:gravity="start|center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:hint="Enter the Registered Email Address"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="42dp"/>

        <Button
            android:id="@+id/resetLinkSend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Send reset link"
            android:background="@color/yellow"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="42dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Reset Password Link has been sent on the Email Address"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Click on the Reset Button to create new password to secure your account"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="16sp"/>

    </LinearLayout>
</LinearLayout>